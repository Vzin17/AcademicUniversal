generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  
}


model User {
  id    Int     @id @default(autoincrement()) // Chave primária, auto-incremento
  email String  @unique // Email único para cada usuário
  name  String? // Nome opcional (o '?' torna o campo opcional)
  posts Post[]  // Um usuário pode ter vários posts (relação 1-para-N)
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id]) // Relação com o User
  authorId  Int      // Chave estrangeira
}